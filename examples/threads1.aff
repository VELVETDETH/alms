(* An example with threads. *)

let[A] printer : unit -> unit =
  let rec loop (_ : unit) : unit =
    threadDelay 100000;
    putStr "x";
    flush ();
    loop ()
  in loop

let[A] timer : unit -> unit =
  fun _: unit ->
    let id = threadFork printer in
      threadDelay 2000000;
      threadKill id

in timer ()
