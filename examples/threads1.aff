(* An example with threads. *)

module[A] printer : unit -> unit =
  let rec loop (_ : unit) : unit =
    threadDelay 100000;
    putStr "x";
    flush ();
    loop ()
  in loop

module[A] timer : unit -> unit =
  \_: unit.
    let id = threadFork printer in
      threadDelay 2000000;
      threadKill id

in timer ()
