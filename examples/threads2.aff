(* Another example with threads. *)

let[A] printer : unit -> unit =
  let rec loop (_ : unit) : unit =
    Thread.delay 100000;
    putStr "x";
    flush ();
    loop ()
  in loop

let[A] startStop : unit -> unit -o unit =
  fun _: unit ->
    let id = Thread.fork printer in
    let id = Thread.print id in
      fun _: unit ->
        Thread.kill id

let[A] timer : unit -> unit =
  fun _: unit ->
    let stop = startStop () in
      Thread.delay 2000000;
      stop ()

in timer ()

