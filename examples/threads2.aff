(* Another example with threads. *)

let[A] printer : unit -> unit =
  let rec loop (_ : unit) : unit =
    threadDelay 100000;
    putStr "x";
    flush ();
    loop ()
  in loop

let[A] startStop : unit -> unit -o unit =
  fun _: unit ->
    let id = threadFork printer in
    let id = printThread id in
      fun _: unit ->
        threadKill id

let[A] timer : unit -> unit =
  fun _: unit ->
    let stop = startStop () in
      threadDelay 2000000;
      stop ()

in timer ()

